{
  "name": "Anagnost",
  "description": "Читает вслух любой текст на странице.",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "64": "assets/icons/icon.png"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": "assets/icons/icon.png"
  },
  "permissions": ["activeTab", "tts"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
